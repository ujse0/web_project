<!DOCTYPE html>
<html>
  <head>
    <title>Welcome to <%=shopName%></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <nav>
      <h1><a href="/"> <%=shopName%> </a></h1>
      <% if(!user) { %>
      <p>
        <a href="https://www.doc.gold.ac.uk/usr/113/login">LOGIN</a> /
        <a href="https://www.doc.gold.ac.uk/usr/113/register">REGISTER</a>
      </p>
      <% } else { %>
      <p><a href="https://www.doc.gold.ac.uk/usr/113/post">PRODUCT LIST</a></p>
      <p><a href="https://www.doc.gold.ac.uk/usr/113/post/add">ADD PRODUCT</a></p>
      <p><a href="https://www.doc.gold.ac.uk/usr/113/my">MY</a></p>
      <p><a href="https://www.doc.gold.ac.uk/usr/113/auth/logout">LOGOUT</a></p>
      <% } %>
    </nav>
    <main>
      <div class="product-list-container">
        <h1>Product List</h1>

        <form class="search-form" action="/post" method="get">
          <input
            type="text"
            name="search"
            placeholder="Search products..."
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
          />
          <select name="sort" onchange="this.form.submit()">
            <option value="desc" <%= currentSort === 'desc' ? 'selected' : '' %>>Latest</option>
            <option value="asc" <%= currentSort === 'asc' ? 'selected' : '' %>>Oldest</option>
          </select>
          <button type="submit">Search</button>
        </form>

        <div class="product-grid">
          <% products.forEach(function(product) { %>
          <div class="product-card">
            <h2><%= product.name %></h2>
            <div class="product-info">
              <p class="price">$<%= product.price %></p>
              <p class="location"><%= product.location %></p>
              <p class="seller">Seller: <%= product.user_name %></p>
              <p class="status">
                Status:
                <span class="status-<%= product.status %>"
                  ><%= product.status %></span
                >
              </p>
              <p class="date"><%= formatFunc(product.created_at) %></p>
            </div>
            <div class="product-actions">
              <a href="/post/<%= product.id %>" class="button view"
                >View Details</a
              >
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>
  </body>
</html>
